{
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "dom",
      "es2017"
    ],
    // "allowJs": true,
    // "checkJs": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "assets/*": [
        "src/assets/*",
        "src/assets/images/*.svg"
      ],
      "components/*": [ "src/components/*"],
      "pages/*": [ "src/pages/*"],
      "styles/*": [ "src/styles/*"],
    }
  }
}